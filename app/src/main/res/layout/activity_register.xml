<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background8blur"
    tools:context=".Register">

    <ImageView
        android:id="@+id/ivLoadingReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bRegister"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alwaystogether"
            android:hint="Name"
            android:inputType="text"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/_22font_mdp" />

        <EditText
            android:id="@+id/etNumberRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alwaystogether"
            android:hint="Phone Number"
            android:inputType="phone"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/_22font_mdp"
            android:maxLength="10"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/white" />

        <EditText
            android:id="@+id/etPasswordRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alwaystogether"
            android:hint="Password"
            android:inputType="textPassword"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/_22font_mdp" />


    </LinearLayout>

    <Button
        android:id="@+id/bRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_14mdp"
        android:background="@drawable/round_corners"
        android:backgroundTint="@color/indianRed"
        android:elevation="@dimen/_4mdp"
        android:fontFamily="@font/alwaystogether"
        android:paddingLeft="@dimen/_28mdp"
        android:paddingRight="@dimen/_28mdp"
        android:text="@string/sign_me_up"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_24font_mdp"
        android:textStyle="bold" />

</RelativeLayout>